		msg.post("/player", "player_move_down")
	elseif action_id == hash("move_up") then
		msg.post("/player", "player_move_up")
	elseif action_id == hash("move_left") then
		msg.post("/player", "player_move_left")
	elseif action_id == hash("move_right") then
		msg.post("/player", "player_move_right")
	end
end

